<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cruz.wanderlust_4itb.Summary"
    android:background="@drawable/background">

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView5"
        android:layout_below="@+id/button5"
        android:text="â—„ Back"
        android:onClick="gotoactivities"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title"
        tools:layout_editor_absoluteY="1dp"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/next4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_centerHorizontal="true"
        android:onClick="thankyou"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView3"
        android:paddingStart="15dp"
        android:text="Check the plans you selected in Wanderlust:"
        android:textSize="8pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baguio City"
        android:paddingStart="15dp"
        android:textSize="8pt"
        android:id="@+id/textView22"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/textView20"
        android:layout_alignEnd="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Athena Rose's Hotel"
        android:paddingStart="15dp"
        android:textSize="8pt"
        android:id="@+id/textView13"
        android:layout_above="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3,000php / night"
        android:paddingStart="15dp"
        android:textSize="8pt"
        android:id="@+id/textView17"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horse Backriding"
        android:textSize="8pt"
        android:paddingStart="15dp"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView14"
        android:layout_toStartOf="@+id/next4"
        android:paddingStart="15dp"
        android:text="Baguio Museum"
        android:textSize="8pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boat Ride"
        android:textSize="8pt"
        android:id="@+id/textView14"
        android:paddingStart="15dp"
        android:layout_below="@+id/textView21"
        android:layout_alignStart="@+id/textView15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination:"
        android:paddingStart="15dp"
        android:textSize="10pt"
        android:layout_above="@+id/textView22"
        android:layout_alignParentStart="true"
        android:id="@+id/textView18" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accomodation:"
        android:paddingStart="15dp"
        android:textSize="10pt"
        android:id="@+id/textView20"
        android:layout_above="@+id/textView13"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Budget:"
        android:textSize="10pt"
        android:id="@+id/textView19"
        android:paddingStart="15dp"
        android:layout_below="@+id/textView16"
        android:layout_toStartOf="@+id/next4"
        android:layout_marginTop="14dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activities:"
        android:paddingStart="15dp"
        android:textSize="10pt"
        android:id="@+id/textView21"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true" />

<TextView
    android:id="@+id/summary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="12,250 php"
    android:paddingStart="15dp"
    android:textSize="8pt"
    android:layout_alignBaseline="@+id/textView19"
    android:layout_alignBottom="@+id/textView19"
    android:layout_alignEnd="@+id/next4" />

</RelativeLayout>
