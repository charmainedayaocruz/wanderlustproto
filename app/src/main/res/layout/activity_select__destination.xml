<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cruz.wanderlust_4itb.Select_Destination"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title"
        android:id="@+id/imageView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:text="Select your preferred Destination:"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />
    <Button
        android:id="@+id/pampanga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pampanga"
        android:textSize="12pt"
        android:onClick="hotel_pampanga"
        android:layout_marginBottom="51dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/laguna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laguna"
        android:textSize="12pt"
        android:layout_marginBottom="14dp"
        android:onClick="hotel_laguna"
        android:layout_above="@+id/pampanga"
        android:layout_alignStart="@+id/pampanga"
        android:layout_alignEnd="@+id/pampanga" />

    <Button
        android:id="@+id/baguio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baguio"
        android:textSize="12pt"
        android:onClick="hotel_baguio"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/cebu"
        android:layout_alignStart="@+id/cebu"
        android:layout_alignEnd="@+id/pampanga" />

    <Button
        android:id="@+id/cebu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cebu"
        android:textSize="12pt"
        android:onClick="hotel_cebu"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/laguna"
        android:layout_alignStart="@+id/laguna"
        android:layout_alignEnd="@+id/pampanga" />
</RelativeLayout>
